{
  "system": {
    "routeCacheMaxCount": 1024
  },
  "routes": {
    "/api/": {
      "proxy": {
        "to": "http://localhost:85/upstream/",
        "proxyName": "some-proxy-name",
        "correlationIdHeader": "x-request-id",
        "upstreamRequest": {
          "httpVersion": "3.0",
          "headers": {
            "allowHeadersWithEmptyValue": true,
            "allowHeadersWithUnderscoreInName": true,
            "includeExternalAddress": true,
            "ignoreAllDownstreamHeaders": true,
            "ignoreVia": true,
            "ignoreCorrelationId": true,
            "ignoreCallId": true,
            "ignoreForwarded": true,
            "useXForwarded": true,
            "overrides": {
              "x-extra-1": [ "value1_1", "value1_2" ],
              "x-extra-2": [ "value2_1", "value2_2" ]
            }
          },
          "sender": {
            "httpClientName": "api-route-http-client-name",
            "timeoutInMilliseconds": 5200,
            "connectTimeoutInMilliseconds": 1000,
            "expect100ContinueTimeoutInMilliseconds": 2000,
            "pooledConnectionIdleTimeoutInMilliseconds": 3000,
            "pooledConnectionLifetimeInMilliseconds": 4000,
            "responseDrainTimeoutInMilliseconds": 5000,
            "maxAutomaticRedirections": 10,
            "maxConnectionsPerServer": 20,
            "maxResponseDrainSizeInBytes": 12800,
            "maxResponseHeadersLengthInKilobytes": 128,
            "allowAutoRedirect": true,
            "useCookies": true
          }
        },
        "downstreamResponse": {
          "headers": {
            "allowHeadersWithEmptyValue": true,
            "allowHeadersWithUnderscoreInName": true,
            "ignoreAllUpstreamHeaders": true,
            "ignoreVia": true,
            "includeCorrelationId": true,
            "includeCallId": true,
            "cookies": {
              "*": {
                "secure": "add",
                "httpOnly": "remove",
                "sameSite": "lax",
                "domain": "example.com"
              },
              "sessionId": {
                "secure": "remove",
                "httpOnly": "add",
                "sameSite": "strict",
                "domain": "sample.com"
              },
              "userCookie": {
                "secure": "add",
                "httpOnly": "add",
                "sameSite": "none",
                "domain": "test.com"
              }
            },
            "overrides": {
              "x-extra-1": [ "value1_1", "value1_2" ],
              "x-extra-2": [ "value2_1", "value2_2" ]
            }
          }
        }
      }
    }
  }
}
