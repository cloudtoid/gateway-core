<Project>

  <!-- Paths -->
  <PropertyGroup>
    <FoidRoot>$(MSBuildThisFileDirectory)</FoidRoot>
    <FoidCodeAnalysis>$(FoidRoot)code-analysis\</FoidCodeAnalysis>
  </PropertyGroup>

  <!-- .NET Runtime Versions -->
  <PropertyGroup>
    <FoidLibraryDotNetVersion>netstandard2.1</FoidLibraryDotNetVersion>
    <FoidAppDotNetVersion>netcoreapp3.1</FoidAppDotNetVersion>
  </PropertyGroup>

  <!-- Build Settings -->
  <PropertyGroup>
    <Platforms>x64</Platforms>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <!-- Product Package Versions -->
  <PropertyGroup>
    <MicrosoftExtensionsVersion>3.1.*</MicrosoftExtensionsVersion>
  </PropertyGroup>

  <!-- Test Package Versions -->
  <PropertyGroup>
    <MicrosoftDotNetTestSdk>16.4.*</MicrosoftDotNetTestSdk>
    <MSTestVersion>2.0.*</MSTestVersion>
    <NSubstituteVersion>4.2.*</NSubstituteVersion>
    <FluentAssertionsVersion>5.10.*</FluentAssertionsVersion>
    <CoverletVersion>2.8.*</CoverletVersion>
  </PropertyGroup>

  <!-- Code Analyzer Versions -->
  <PropertyGroup>
    <StyleCopAnalyzersVersion>1.2.0-beta.113</StyleCopAnalyzersVersion>
    <ThreadingAnalyzersVersion>16.5.*</ThreadingAnalyzersVersion>
    <BannedApiAnalyzersVersion>2.9.*</BannedApiAnalyzersVersion>
  </PropertyGroup>

  <!-- Code Analyzer Settings -->
  <PropertyGroup>
    <CodeAnalysisRuleSet>$(FoidCodeAnalysis)stylecop.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <!-- Code Analyzer Assets -->
  <ItemGroup>
    <AdditionalFiles Include="$(FoidCodeAnalysis)stylecop.json" Visible="false" />
    <AdditionalFiles Include="$(FoidCodeAnalysis)BannedSymbols.txt" Visible="false" />
  </ItemGroup>

  <!-- Package dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="$(MicrosoftExtensionsVersion)" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="$(MicrosoftExtensionsVersion)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="$(MicrosoftExtensionsVersion)" />
    <PackageReference Include="Microsoft.CodeAnalysis.BannedApiAnalyzers" Version="$(BannedApiAnalyzersVersion)" IncludeAssets="all"/>
    <PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers" Version="$(ThreadingAnalyzersVersion)" IncludeAssets="all" />
    <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)" IncludeAssets="all"  />
  </ItemGroup>

</Project>